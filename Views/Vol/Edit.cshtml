@model reservation_vols.Models.Vol

<div class="container mt-5">
    <h2 class="text-center text-light bg-primary p-3 rounded">✈️ Modifier un Vol</h2>

    <form method="post" enctype="multipart/form-data" asp-action="Edit" asp-controller="Vol" class="p-4 bg-dark text-light rounded shadow">

        <div class="mb-3">
            <label asp-for="nombrePalces" class="form-label fw-bold">Nombre de places</label>
            <input asp-for="nombrePalces" class="form-control" type="number" required />
        </div>

        <div class="mb-3">
            <label asp-for="destination" class="form-label fw-bold">Destination</label>
            <input asp-for="destination" class="form-control" type="text" required />
        </div>

        <div class="mb-3">
            <label asp-for="départ" class="form-label fw-bold">Ville de départ</label>
            <input asp-for="départ" class="form-control" type="text" required />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="dateDepart" class="form-label fw-bold">Date de départ</label>
                <input asp-for="dateDepart" class="form-control" type="datetime-local" required />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="dateArrivee" class="form-label fw-bold">Date d'arrivée</label>
                <input asp-for="dateArrivee" class="form-control" type="datetime-local" required />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="prix" class="form-label fw-bold">Prix (€)</label>
            <input asp-for="prix" class="form-control" type="number" step="0.01" required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">
                💾 Enregistrer les modifications
            </button>
            <a asp-action="Index" class="btn btn-secondary px-4">🔙 Retour</a>
        </div>
    </form>
</div>
