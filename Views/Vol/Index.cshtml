<p class="text-center text-light fs-3 p-4 bg-primary rounded shadow-lg border border-white">
    📌 Liste des Vols
</p>

<!-- Formulaire de recherche multicritère -->
<form asp-action="RechercherVolsMulticriteres" method="get" class="mb-4 d-flex flex-wrap justify-content-center align-items-center">
    <input type="text" name="depart" class="form-control w-auto me-2" placeholder="Lieu de départ">

    <input type="text" name="destination" class="form-control w-auto me-2" placeholder="Destination">

    <input type="date" name="dateDepart" class="form-control w-auto me-2">

    <input type="date" name="dateArrivee" class="form-control w-auto me-2">

    <input type="number" name="prixMin" class="form-control w-auto me-2" placeholder="Prix min (€)">

    <input type="number" name="prixMax" class="form-control w-auto me-2" placeholder="Prix max (€)">

    <input type="number" name="places" class="form-control w-auto me-2" placeholder="Nombre de places">

    <button type="submit" class="btn btn-light border border-primary shadow-sm">🔍 Rechercher</button>
</form>

<table class="table table-dark table-hover table-bordered">
    <thead class="table-primary text-center">
        <tr>
            <th>Départ</th>
            <th>Destination</th>
            <th>Date de départ</th>
            <th>Date d'arrivée</th>
            <th>Places</th>
            <th>Prix (€)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr class="text-center align-middle">
                <td>@obj.départ</td>
                <td>@obj.destination</td>
                <td>@obj.dateDepart.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@obj.dateArrivee.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@obj.nombrePalces</td>
                <td><span class="badge bg-success">@obj.prix €</span></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning btn-sm">✏️ Modifier</a>
                    <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Voulez-vous vraiment supprimer ce vol ?');">🗑️ Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-3">
    <a asp-action="Create" class="btn btn-primary">➕ Ajouter un vol</a>
    @* <a asp-action="afficherStatistiques" class="btn btn-info ms-2"> *@
    @*     📊 Voir les Statistiques *@
    @* </a> *@
    <a href="@Url.Action("Index", "Reservation")" class="btn btn-primary">Consulter les réservations</a>

</div>
